<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:text="跳转"/>

    <Button
        android:id="@+id/btnTest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTest"
        android:layout_margin="20dp"
        android:text="测试"/>

    <TextClock
        android:id="@+id/tvClockTm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:alpha="0.8"
        android:format24Hour="HH:mm"
        android:includeFontPadding="false"
        android:textColor="#ff0000"
        android:textSize="@dimen/px24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="12:30" />

    <TextClock
        android:id="@+id/tvClockTm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:alpha="0.8"
        android:layout_marginLeft="@dimen/px20"
        android:format24Hour="hh:mm"
        android:includeFontPadding="false"
        android:textColor="#ff0000"
        android:textSize="@dimen/px24"
        app:layout_constraintLeft_toRightOf="@id/tvClockTm"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="12:30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxEms="5"
        android:visibility="gone"
        android:text="你好高打开过的你家啊看到几个卡过你好高打开过的你家啊看到几个卡过你好高打开过的你家啊看到几个卡过你好高打开过的你家啊看到几个卡过你好高打开过的你家啊看到几个卡过你好高打开过的你家啊看到几个卡过你好高打开过的你家啊看到几个卡过"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>